<resources>
    <!-- Base application theme. -->
    <style name="Theme.CheckTask" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
    </style>

    <style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">#FF0A3D62</item>
        <item name="android:colorControlActivated">#FF192A56</item>
        <item name="android:colorControlHighlight">#FD0000</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="fabStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="tint">@color/colorWhite</item>
    </style>

    <style name="addBtnStyle" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>


    <style name="splashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
    </style>

</resources>