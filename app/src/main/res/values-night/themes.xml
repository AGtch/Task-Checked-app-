<resources>
    <!-- Base application theme. -->
    <style name="Theme.CheckTask" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>

    </style>

    <style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">#071D57</item>
        <item name="android:colorControlActivated">#FFCA28</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="fabStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/fat_in_dark</item>
        <item name="tint">@color/colorAccent</item>
    </style>

    <style name="addBtnStyle" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@color/fat_in_dark</item>
    </style>


    <style name="splashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
    </style>

    <style name="detailScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar"></style>
</resources>