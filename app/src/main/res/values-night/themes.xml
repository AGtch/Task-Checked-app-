<resources>
    <!-- Base application theme. -->
    <style name="Theme.CheckTask" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fat_in_dark</item>
        <item name="colorPrimaryDark">@color/fat_in_dark</item>

    </style>

    <style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">@color/fat_in_dark</item>
        <item name="android:colorControlActivated">#FFCA28</item>
        <item name="android:colorControlHighlight">@color/checkBoxColor_in_dark</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="fabStyle" parent="Widget.Material3.FloatingActionButton.Secondary">
        <item name="backgroundTint">@color/fat_in_dark</item>
        <item name="tint">@color/colorWhite</item>
    </style>

    <style name="addBtnStyle" parent="Widget.Material3.Button.TextButton">
        <item name="backgroundTint">@color/fat_in_dark</item>
    </style>


    <style name="splashScreen" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
    </style>

    <style name="detailScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar" />
</resources>